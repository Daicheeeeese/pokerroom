generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String   @unique
  password      String
  emailVerified DateTime?
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  reservations  Reservation[]
}

model Room {
  id          String        @id @default(cuid())
  name        String
  description String
  address     String
  area        String
  price       Int
  capacity    Int
  latitude    Float
  longitude   Float
  imageUrl    String
  facilities  String[]
  reviews     Review[]
  reservations Reservation[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Reservation {
  id          String   @id @default(cuid())
  room        Room     @relation(fields: [roomId], references: [id])
  roomId      String
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  date        DateTime
  startTime   String
  endTime     String
  totalPrice  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
