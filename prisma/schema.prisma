generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id            String        @id @default(cuid())
  name          String?
  email         String        @unique
  password      String
  emailVerified DateTime?
  image         String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  reservations  reservation[]
}

model room {
  id          String        @id @default(cuid())
  name        String
  description String
  address     String
  area        String
  price       Int
  capacity    Int
  latitude    Float
  longitude   Float
  imageUrl    String
  facilities  String[]
  reviews     review[]
  reservations reservation[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String
  room      room     @relation(fields: [roomId], references: [id])
  roomId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model reservation {
  id          String   @id @default(cuid())
  room        room     @relation(fields: [roomId], references: [id])
  roomId      String
  user        user     @relation(fields: [userId], references: [id])
  userId      String
  date        DateTime
  startTime   String
  endTime     String
  totalPrice  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
